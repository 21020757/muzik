<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search_fragment.SearchFragment">

    <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchHintIcon="@drawable/baseline_search_24_hint"
            app:searchIcon="@drawable/baseline_search_24"
            android:background="@drawable/search_view_shape"
            app:closeIcon="@drawable/baseline_close_18"
            android:layout_marginHorizontal="@dimen/activity_horizontal_padding"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/sv_search_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/search_scroll_view"
            android:layout_marginTop="10dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
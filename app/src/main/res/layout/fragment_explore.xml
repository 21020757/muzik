<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.explore_fragment.ExploreFragment"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/explore_scroll_view">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:text="@string/top_collections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style='@style/collectionName'
                        android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_playlists_preview" />
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:text="@string/for_you"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style='@style/collectionName'
                        android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_for_you_songs_preview" />
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:text="Your artists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style='@style/collectionName'
                        android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_your_artist_preview" />
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:text="Recently"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style='@style/collectionName'
                        android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_recent_albums_preview" />
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="409dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:text="@string/listen_again"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style='@style/collectionName'
                        android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_listen_again_playlists_preview" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
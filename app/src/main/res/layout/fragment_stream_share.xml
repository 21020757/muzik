<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.stream_share_fragment.StreamShareFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:text="Create your new room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_room_button"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#87bafc"
                android:textColor="#232c34"
                android:textAllCaps="false"
                android:stateListAnimator="@animator/zoom_out_animator" />

        <TextView
                android:text="Or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorOnPrimary"
                android:textStyle="bold" />

        <TextView
                android:text="Join with an available room ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorOnPrimary" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:gravity="center"
                    android:id="@+id/room_id_input_text"
                    android:textColor="@color/colorOnPrimary" />

        </LinearLayout>

        <Button
                android:text="Join now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_button"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#87bafc"
                android:textColor="#232c34"
                android:textAllCaps="false"
                android:stateListAnimator="@animator/zoom_out_animator" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>